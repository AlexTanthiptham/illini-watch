<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary2"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="4dp"
    android:layout_margin="15dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvNotificationTitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_head1"
                android:text="Notification Title" />
            <TextView
                android:id="@+id/tvNotificationTitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_head2"
                android:text="Location" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvNotificationTitle3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_head2"
                android:text="Status" />
            <TextView
                android:id="@+id/tvNotificationTitle4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_head2"
                android:text="Time" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="4dp"
        android:layout_margin="15dp"
        >

        <TextView
            android:id="@+id/tvNotificationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:maxLines="2"
            android:ellipsize="end"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:text="Notification text goes here" />

        <Button
            android:id="@+id/btnReadMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondary"
            android:layout_below="@id/tvNotificationText"
            android:layout_marginTop="8dp"
            android:text="Read more" />

        <Button
            android:id="@+id/btnShowLess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondary"
            android:layout_below="@id/tvNotificationText"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:text="Show less" />

    </LinearLayout>

</LinearLayout>