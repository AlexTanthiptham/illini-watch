<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlertsFragment">

    <!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Box at the top -->
    <LinearLayout
        android:id="@+id/topBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Unused - Feels like we could put something here -->
        <Button
            android:id="@+id/btnDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:textColor="@color/grey"
            android:text=""
            android:layout_weight="1"
            />

        <!-- Centered "Settings" Text -->
        <TextView
            android:id="@+id/text_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alerts"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="@dimen/text_head1"
            android:layout_gravity="center"
            android:layout_weight="1"
            />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:textColor="@color/grey"
            android:text="Filter"
            android:layout_weight="1"
            />
    </LinearLayout>

    <!-- res/layout/fragment_container_with_notifications.xml -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <fragment
            android:id="@+id/notificationContainer1"
            android:name="com.example.illinoiswatch.AlertsBoxFragment"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:tag="container1" />

        <fragment
            android:id="@+id/notificationContainer2"
            android:name="com.example.illinoiswatch.AlertsBoxFragment"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:tag="container2" />

    </LinearLayout>
</LinearLayout>



</FrameLayout>

